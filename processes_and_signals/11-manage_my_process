#!/usr/bin/env bash 
#this is a comment
PIDFILE="/var/run/my_process.pid"
DAEMON="./manage_my_process"

case "$1" in
    start)
        # Daemonu başlat
        $DAEMON &
        echo $! > "$PIDFILE"
        echo "manage_my_process started"
        ;;
    stop)
        # Proses varsa dayandır
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        echo "manage_my_process stopped"
        ;;
    restart)
        # Stop
        if [ -f "$PIDFILE" ]; then
            PID=$(cat "$PIDFILE")
            kill "$PID" 2>/dev/null
            rm -f "$PIDFILE"
        fi
        # Start
        $DAEMON &
        echo $! > "$PIDFILE"
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
